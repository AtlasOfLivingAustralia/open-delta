<!-- This assembly plugin descriptor is used to build a distributable zip 
	of the delta application -->
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
	<id>mac_os_bundle</id>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/installer/mac_os</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>

        <fileSet>
            <directory>${project.basedir}/intkey/src/test/resources/dataset/sample</directory>
            <outputDirectory>/.open-delta/sample</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/delta-editor/target</directory>
            <outputDirectory>/.open-delta/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>*with-dependencies*.jar</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/delta-editor/target/dependencies</directory>
            <outputDirectory>/.open-delta/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/delta-editor/target/appassembler/bin</directory>
            <outputDirectory>/.open-delta/bin</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/intkey/target</directory>
            <outputDirectory>/.open-delta/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>*with-dependencies*.jar</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/intkey/target/dependencies</directory>
            <outputDirectory>/.open-delta/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/intkey/target/appassembler/bin</directory>
            <outputDirectory>/.open-delta/bin</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/confor/target</directory>
            <outputDirectory>/.open-delta/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>*with-dependencies*.jar</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/confor/target/dependencies</directory>
            <outputDirectory>/.open-delta/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/confor/target/appassembler/bin</directory>
            <outputDirectory>/.open-delta/bin</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/dist/target</directory>
            <outputDirectory>/.open-delta/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>*with-dependencies*.jar</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/dist/target/dependencies</directory>
            <outputDirectory>/.open-delta/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/dist/target/appassembler/bin</directory>
            <outputDirectory>/.open-delta/bin</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/key/target</directory>
            <outputDirectory>/.open-delta/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>*with-dependencies*.jar</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/key/target/dependencies</directory>
            <outputDirectory>/.open-delta/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/key/target/appassembler/bin</directory>
            <outputDirectory>/.open-delta/bin</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
	</fileSets>
</assembly>